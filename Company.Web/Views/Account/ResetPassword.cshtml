@model ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h1>ResetPassword</h1>

<form asp-action="ResetPassword" method="post">
    <div asp-validation-summary="All"></div>

    <input type="hidden" asp-for="Email"  />
    <input type="hidden" asp-for="Token"  />

    <input type="passsword" asp-for="Password" placeholder="Password" required="" />
    <span asp-validation-for="Password"></span>
    <br />
    <input type="passsword" asp-for="ConfirmPassword" placeholder="Confirmpassword" required="" />
    <span asp-validation-for="ConfirmPassword"></span>
    <br />

    <input type="submit" value="Cahnge password" class="btn btn-primary" />
</form>